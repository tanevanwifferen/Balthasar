{
  // Human-friendly description (optional)
  "description": "Research-focused agent that can browse and fetch data; can delegate to executor.",

  // Empty system prompt: researcher is multi-purpose and should rely on the top-level/orchestrator prompt
  "systemPrompt": "",

  // Per-server tool policy for this agent.
  // Keys are server names from mcpServers in mcp-server-config.json
  "servers": {
    "brave-search": {
      // Only allow specific tools from this server
      "include_tools": ["search"]
    },
    "fetch": {
      "include_tools": ["fetch"]
    },
    "youtube": {
      "include_tools": ["search", "get_transcript"]
    }
  },

  // Which sub-agents this agent is allowed to call via the call_agent tool
  "allowedAgents": ["executor"]
}