{
    "name": "mcp-client-cli",
    "version": "0.1.0",
    "description": "TypeScript-based CLI MCP client (replaces Python mcp-client-cli)",
    "license": "MIT",
    "type": "module",
    "bin": {
        "llm": "./dist/bin/llm.js"
    },
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "build": "tsc -p tsconfig.json",
        "dev": "tsx watch src/bin/llm.ts",
        "start": "node ./dist/bin/llm.js",
        "lint": "eslint .",
        "format": "prettier --write ."
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.2.0",
        "openai": "^4.57.0",
        "chalk": "^5.3.0",
        "commander": "^12.1.0",
        "cosmiconfig": "^9.0.0",
        "comment-json": "^4.2.3",
        "prompts": "^2.4.2",
        "ora": "^8.0.1",
        "consola": "^3.2.3",
        "clipboardy": "^4.0.0",
        "file-type": "^19.6.0",
        "zod": "^3.23.8",
        "lowdb": "^7.0.1"
    },
    "devDependencies": {
        "@types/node": "^22.5.0",
        "@types/prompts": "^2.4.9",
        "eslint": "^9.9.0",
        "eslint-config-prettier": "^9.1.0",
        "prettier": "^3.3.3",
        "tsx": "^4.19.1",
        "typescript": "^5.5.4"
    }
}